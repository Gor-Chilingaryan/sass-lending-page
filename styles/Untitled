import { defineConfig } from 'vite';
import path from 'path';

export default defineConfig({
  css: {
    preprocessorOptions: {
      scss: {
        // ВАЖНО: Укажи правильный путь до своего файла с переменными
        // additionalData автоматически "подклеит" этот импорт во все твои .scss файлы
        additionalData: `@use "@/styles/variables-functions" as *;`
      }
    }
  },
  resolve: {
    alias: {
      // Настройка алиаса '@', чтобы пути всегда были понятными
      '@': path.resolve(__dirname, './styles') 
    }
  }
});